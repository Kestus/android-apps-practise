<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="4dp"
    android:elevation="8dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#82B1FF"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="6dp"

        >

        <ImageView
            android:id="@+id/item_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:contentDescription="TODO"
            android:src="@drawable/check_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_check_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:src="@drawable/check_sign"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="30dp"
            app:layout_constraintTop_toTopOf="@id/item_check_box"
            app:layout_constraintBottom_toBottomOf="@id/item_check_box"
            app:layout_constraintStart_toStartOf="@id/item_check_box"
            app:layout_constraintEnd_toEndOf="@id/item_check_box"
            />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="serif"
            android:text="Test"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/item_check_box"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 000"
            android:textColor="#7C4DFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

        <TextView
            android:id="@+id/item_velocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Velocity: 000"
            android:textColor="#7C4DFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/item_distance"
            app:layout_constraintTop_toBottomOf="@+id/item_distance" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>